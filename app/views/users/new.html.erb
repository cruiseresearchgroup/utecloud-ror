<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create new user [God mode]</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}, :method => :post) do |f| %>
                        <fieldset>
                          <% if flash[:error] %>
                            <div class="alert alert-danger alert-dismissable">
                              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                              
                              <%= content_tag :div, flash[:error], :id => "flash_error" %>

                              <% if @user.errors.any? %>
                                <% for message_error in @user.errors.full_messages %>
                                  <%= content_tag :div, message_error %>
                                <% end %>
                              <% end %>
                            </div>
                          <% end %>
                          
                            <div class="form-group">
                              <%= f.text_field(:username, value: params[:username], class: "form-control", placeholder: "Username", autofocus: "") %>
                            </div>
                            <div class="form-group">
                              <%= f.text_field(:email, value: params[:email], class: "form-control", placeholder: "Email") %>
                            </div>

                            <div class="form-group">
                              <%= f.password_field(:password, class: "form-control", placeholder: "Password") %>
                            </div>
                            <div class="form-group">
                              <%= f.password_field(:password_confirmation, class: "form-control", placeholder: "Confirm Password") %>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <%= submit_tag "Create", class: "btn btn-lg btn-info btn-block" %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
  </div>