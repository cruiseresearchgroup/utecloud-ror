<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Password Change [God mode]</h3>
                </div>
                <div class="panel-body">
                    <%= form_tag admin_update_password_path, :method => :post do %>
                        <fieldset>
                          <% if flash[:error] %>
                            <div class="alert alert-danger alert-dismissable">
                              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                              
                              <%= content_tag :div, flash[:error], :id => "flash_error" %>
                              <% if @usr_toupdate && @usr_toupdate.errors.any? %>
                                <% for message_error in @usr_toupdate.errors.full_messages %>
                                  <%= content_tag :div, message_error %>
                                <% end %>
                              <% end %>
                            </div>
                          <% end %>
                          <% if flash[:success] %>
                            <div class="alert alert-success alert-dismissable">
                              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                              
                              <%= content_tag :div, flash[:success], :id => "flash_success" %>
                              <% if @usr_toupdate && @usr_toupdate.errors.any? %>
                                <% for message_error in @usr_toupdate.errors.full_messages %>
                                  <%= content_tag :div, message_error %>
                                <% end %>
                              <% end %>
                            </div>
                          <% end %>
                            <div class="form-group">
                              <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Username", autofocus: "" %>
                            </div>
                            <div class="form-group">
                              <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
                            </div>
                            <div class="form-group">
                              <%= password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "Confirm Password" %>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <%= submit_tag "Password Change", class: "btn btn-lg btn-danger btn-block" %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
  </div>